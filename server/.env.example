# Dev Launcher Server Configuration

# Database
DATABASE_URL="file:./dev.db"

# Templates
TEMPLATES_ROOT="../templates"

# WSL Configuration
WSL_DISTRO="Ubuntu"
WSL_USER="user"

# Windows Configuration  
WINDOWS_USER="user"

# Docker Configuration
DOCKER_HOST="npipe:////./pipe/docker_engine"  # Windows
# DOCKER_HOST="unix:///var/run/docker.sock"   # WSL/Linux

# Port Configuration
PORT_RANGE_START=3000
PORT_RANGE_END=9999

# Logging
LOG_LEVEL="info"
LOG_FILE="./logs/devlauncher.log"

# Development
NODE_ENV="development"
API_PORT=3001